@model MMApp.Domain.Models.Country
@{
    ViewBag.Title = "Details";
    Layout = null;
}

<link rel="stylesheet" href="~/Content/bootstrap.min.css" />
<script src="~/Scripts/bootstrap.min.js"></script>

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">View Country</h3>
</div>

<table cellpadding="0" cellspacing="0" border="0">
    <tr>
        <td class="labelWidth150 labelPadding">@Html.DisplayNameFor(country => country.CountryName)</td>
        <td class="labelWidth150">@Html.DisplayFor(country => country.CountryName)</td>
    </tr>

    <tr>
        <td>
            <table>
                <tr>
                    <th class="width200">Website</th>
                </tr>
                @foreach (var item in Model.Websites)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Url)
                        </td>
                    </tr>
                }
            </table>
        </td>
    </tr>
</table>

