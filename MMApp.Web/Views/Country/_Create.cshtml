@model MMApp.Domain.Models.Country

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Create Country</h3>
</div>

@using (Html.BeginForm("Create", "Country", FormMethod.Post, new { @class = "modal-form" }))
{
    @Html.ValidationSummary()

    <div class="modal-body">
        <div>
            @Html.LabelFor(x => x.CountryName)
            @Html.EditorFor(x => x.CountryName)
            @Html.ValidationMessageFor(x => x.CountryName)
        </div>
    </div>

    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Undo</button>
        <button class="btn btn-primary" type="submit">Save</button>
    </div>
}
