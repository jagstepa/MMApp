@using MMApp.Web.Helpers
@model IEnumerable<MMApp.Domain.Models.Occupation>

@{
    ViewBag.Title = "Index";
}

<h2>List of Labels</h2>
<p>
    @Html.ActionLink("Add Occupation", "AddOccupation", "Occupation")
</p>

@Html.ValidationSummary(true)

<table>
    <tr>
        <th class="width200">
            @Html.DisplayNameFor(model => model.OccupationName)
        </th>
           <th class="width200">
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th class="width100">Update</th>
        <th class="width100">Remove</th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OccupationName)
            </td>
            <td>
                @Html.WebsiteLink(item.Website, item.OccupationName)
            </td>
            <td>
                @Html.ActionLink("Update", "UpdateOccupation", "Occupation", new { occupationId = item.Id}, null)
            </td>
            <td>
                @Html.ActionLink("Remove", "RemoveOccupation", "Occupation", new { occupationId = item.Id, occupationName = item.OccupationName }, new { onclick = "return confirm('Are you sure you wish to delete Occupation ( " + item.OccupationName + " ) ?');"})
            </td>
        </tr>
    }

</table>
